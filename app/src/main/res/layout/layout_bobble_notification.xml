<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="93dp">

    <ImageView
        android:id="@+id/ivBobbleLogo"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/ic_launcher"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvBobbleKeyboard"
        app:layout_constraintBottom_toBottomOf="@id/tvBobbleKeyboard"

        />

    <TextView
        android:id="@+id/tvBobbleKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:text="Bobble Keyboard"
        android:textColor="#0e9391"
        android:textSize="12sp"
        android:textStyle="normal"

        app:layout_constraintBottom_toTopOf="@+id/tvEnableBobbleKeyboard"

        app:layout_constraintStart_toEndOf="@id/ivBobbleLogo"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvEnableNow"
       />

    <TextView
        android:id="@+id/tvEnableBobbleKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="Enable \uD83C\uDF1FBobble AI Keyboard\uD83C\uDF1FðŸŒŸ"
        android:textColor="#de000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/tvdontmiss"
        app:layout_constraintTop_toBottomOf="@id/tvBobbleKeyboard"
        app:layout_constraintStart_toStartOf="@id/ivBobbleLogo"
        android:layout_marginTop="7dp"

        />

    <TextView
        android:id="@+id/tvdontmiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="Donâ€™t miss the fun "
        android:textColor="#8b000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/tvEnableBobbleKeyboard"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="12dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEnableBobbleKeyboard" />

<TextView
    android:layout_width="120dp"
    android:layout_height="43dp"
    android:id="@+id/tvEnableNow"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:textSize="13sp"
    android:fontFamily="sans-serif-medium"
    android:textStyle="normal"
    android:textColor="#ffffff"
    android:text="ENABLE NOW"
    app:layout_constraintTop_toBottomOf="@id/ivCancel"
    app:layout_constraintEnd_toEndOf="@id/ivCancel"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"

    />


</androidx.constraintlayout.widget.ConstraintLayout>